		</activity>
		<activity android:name=".CameraAR" android:label="@string/cameraAR">
			<intent-filter>
				<action android:name="android.intent.action.VIEW" />
				<category android:name="android.intent.category.DEFAULT" />
				<type android:value=".CameraMap" />
