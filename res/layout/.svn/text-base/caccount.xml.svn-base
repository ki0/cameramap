<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  	<ImageView  
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" 
        android:scaleType="center"
        android:src="@drawable/cameramap_splash_screen" 
    />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="5dip"
		android:layout_y="115dip"
		android:textSize="12px"
        android:text="Name: "
    />  
    <EditText
        android:id="@+id/name"
        android:layout_width="215dip"
        android:layout_height="wrap_content"
        android:layout_x="100dip"
		android:layout_y="105dip"
		android:textSize="12px"
		android:singleLine="true"
    />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="5dip"
		android:layout_y="160dip"
		android:textSize="12px"
        android:text="Surname: "
    />  
    <EditText
        android:id="@+id/surname"
        android:layout_width="215dip"
        android:layout_height="wrap_content"
        android:layout_x="100dip"
		android:layout_y="150dip"
		android:textSize="12px"
		android:singleLine="true"
    />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="5dip"
		android:layout_y="205dip"
		android:textSize="12px"
        android:text="User name: "
    />  
    <EditText
        android:id="@+id/uname"
        android:layout_width="215dip"
        android:layout_height="wrap_content"
        android:layout_x="100dip"
		android:layout_y="195dip"
		android:textSize="12px"
		android:singleLine="true"
    />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="5dip"
		android:layout_y="250dip"
		android:textSize="12px"
        android:text="Email: "
    />  
    <EditText
        android:id="@+id/email"
        android:layout_width="215dip"
        android:layout_height="wrap_content"
        android:layout_x="100dip"
		android:layout_y="240dip"
		android:textSize="12px"
		android:singleLine="true"
    />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="5dip"
		android:layout_y="295dip"
		android:textSize="12px"
        android:text="Password:"
    />   
    <EditText
        android:id="@+id/pass"
        android:layout_width="215dip"
        android:layout_height="wrap_content"
        android:layout_x="100dip"
		android:layout_y="285dip"
		android:textSize="12px"
		android:singleLine="true"
		android:password="true"
    />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="5dip"
		android:layout_y="340dip"
		android:textSize="12px"
        android:text="Repeat Password:"
    />  
    <EditText
        android:id="@+id/rpass"
        android:layout_width="215dip"
        android:layout_height="wrap_content"
        android:layout_x="100dip"
		android:layout_y="330dip"
		android:textSize="12px"
		android:singleLine="true"
		android:password="true"
    />
	<Button
		android:id="@+id/caccountButton"
		android:layout_width="290dip"
		android:layout_height="wrap_content"
		android:layout_x="15dip"
		android:layout_y="380dip"
		android:textSize="12px"
		android:text="Create Account"
	/> 
</AbsoluteLayout>
