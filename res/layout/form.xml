<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
	<Button
		android:id="@+id/explorar"
		android:layout_width="160dip"
		android:layout_height="wrap_content"
		android:layout_x="0dip"
		android:layout_y="5dip"
		android:textSize="12px"
		android:text="search..."
	/>
	<Button
		android:id="@+id/camera"
		android:layout_width="160dip"
		android:layout_height="wrap_content"
		android:layout_x="160dip"
		android:layout_y="5dip"
		android:textSize="12px"
		android:text="camera..."
	/>
	<TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="15dip"
		android:layout_y="65dip"
		android:textSize="12px"
        android:text="Type of camera:"
    />  
	<Spinner 
        android:id="@+id/tipo"
        android:layout_width="160dip"
        android:layout_height="wrap_content"
        android:layout_x="160dip"
		android:layout_y="55dip"
		android:textSize="12px"
        android:drawSelectorOnTop="true"
        android:prompt="@string/cameraType"
    />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="15dip"
		android:layout_y="115dip"
		android:textSize="12px"
        android:text="Alert of vigilance:"
    />  
    <Spinner 
        android:id="@+id/aviso"
        android:layout_width="160dip"
        android:layout_height="wrap_content"
        android:layout_x="160dip"
		android:layout_y="100dip"
		android:textSize="12px"
        android:drawSelectorOnTop="true"
        android:prompt="@string/cameraAlert"
    />
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="15dip"
		android:layout_y="160dip"
		android:textSize="12px"
        android:text="Private/Public:"
    />  
    <Spinner 
        android:id="@+id/estado"
        android:layout_width="160dip"
        android:layout_height="wrap_content"
        android:layout_x="160dip"
		android:layout_y="145dip"
		android:textSize="12px"
        android:drawSelectorOnTop="true"
        android:prompt="@string/cameraState"
    />
  	<TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="15dip"
		android:layout_y="215dip"
		android:textSize="12px"
        android:text="Location:"
    />
    <EditText
        android:id="@+id/eLocation"
        android:layout_width="220dip"
        android:layout_height="wrap_content"
        android:layout_x="100dip"
		android:layout_y="200dip"
		android:textSize="12px"
		android:singleLine="true"
		android:inputType="textPostalAddress|textLongMessage"
    />
  	
	<TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="15dip"
		android:layout_y="265dip"
		android:textSize="12px"
        android:text="Comments:"
    />
    <EditText
        android:id="@+id/eComen"
        android:layout_width="220dip"
        android:layout_height="wrap_content"
        android:layout_x="100dip"
		android:layout_y="250dip"
		android:textSize="12px"
		android:inputType="textLongMessage"		
		android:singleLine="true"
    />
    <Button
		android:id="@+id/upload"
		android:layout_width="160dip"
		android:layout_height="wrap_content"
		android:layout_x="0dip"
		android:layout_y="300dip"
		android:textSize="12px"
		android:text="Upload..."
	/>
	<Button
		android:id="@+id/vMap"
		android:layout_width="160dip"
		android:layout_height="wrap_content"
		android:layout_x="160dip"
		android:layout_y="300dip"
		android:textSize="12px"
		android:text="ViewMap"
	/>
	
</AbsoluteLayout>
