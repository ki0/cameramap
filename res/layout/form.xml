<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">

	<Button
	    android:id="@+id/explorar"
	    android:layout_width="160dip"
	    android:layout_height="wrap_content"
	    android:layout_x="0dip"
	    android:layout_y="5dip"
	    android:text="search..."
	    android:textSize="14sp" />

	<Button
	    android:id="@+id/camera"
	    android:layout_width="160dip"
	    android:layout_height="wrap_content"
	    android:layout_x="160dip"
	    android:layout_y="5dip"
	    android:text="camera..."
	    android:textSize="14sp" />

	<Button
	    android:id="@+id/upload"
	    android:layout_width="160dip"
	    android:layout_height="wrap_content"
	    android:layout_x="0dp"
	    android:layout_y="396dp"
	    android:text="Upload..."
	    android:textSize="14sp" />

	<Button
	    android:id="@+id/vMap"
	    android:layout_width="160dip"
	    android:layout_height="wrap_content"
	    android:layout_x="159dp"
	    android:layout_y="396dp"
	    android:text="ViewMap"
	    android:textSize="14sp" />

	<TextView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_x="13dp"
	    android:layout_y="74dp"
	    android:text="Type of camera:"
	    android:textSize="14sp" />

	<Spinner
	    android:id="@+id/tipo"
	    android:layout_width="160dip"
	    android:layout_height="wrap_content"
	    android:layout_x="158dp"
	    android:layout_y="58dp"
	    android:drawSelectorOnTop="true"
	    android:prompt="@string/cameraType"
	    android:textSize="12px" />

	<TextView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_x="15dp"
	    android:layout_y="322dp"
	    android:text="Comments:"
	    android:textSize="14sp" />

	<EditText
	    android:id="@+id/eComen"
	    android:layout_width="220dip"
	    android:layout_height="wrap_content"
	    android:layout_x="98dp"
	    android:layout_y="311dp"
	    android:ems="10"
	    android:inputType="textLongMessage"
	    android:singleLine="true"
	    android:textSize="12px" />

	<TextView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_x="16dp"
	    android:layout_y="261dp"
	    android:text="Location:"
	    android:textSize="14sp" />

	<EditText
	    android:id="@+id/eLocation"
	    android:layout_width="220dip"
	    android:layout_height="wrap_content"
	    android:layout_x="98dp"
	    android:layout_y="250dp"
	    android:ems="10"
	    android:inputType="textPostalAddress|textLongMessage"
	    android:singleLine="true"
	    android:textSize="12px" />

	<TextView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_x="16dp"
	    android:layout_y="194dp"
	    android:text="Private/Public:"
	    android:textSize="14sp" />

	<Spinner
	    android:id="@+id/estado"
	    android:layout_width="160dip"
	    android:layout_height="wrap_content"
	    android:layout_x="158dp"
	    android:layout_y="171dp"
	    android:drawSelectorOnTop="true"
	    android:prompt="@string/cameraState"
	    android:textSize="12px" />

	<TextView
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:layout_x="13dp"
	    android:layout_y="132dp"
	    android:text="Alert of vigilance:"
	    android:textSize="14sp" />

	<Spinner
	    android:id="@+id/aviso"
	    android:layout_width="160dip"
	    android:layout_height="wrap_content"
	    android:layout_x="158dp"
	    android:layout_y="111dp"
	    android:drawSelectorOnTop="true"
	    android:prompt="@string/cameraAlert"
	    android:textSize="12px" />
	
</AbsoluteLayout>
