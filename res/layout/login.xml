<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content">
  
  	<ImageView  
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent" 
        android:scaleType="center"
        android:src="@drawable/cameramap_splash_screen" 
    />
  
  	<TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="15dip"
		android:layout_y="260dip"
		android:textSize="12px"
        android:text="Login: "
    />  
    
    <EditText
        android:id="@+id/login"
        android:layout_width="215dip"
        android:layout_height="wrap_content"
        android:layout_x="90dip"
		android:layout_y="250dip"
		android:textSize="12px"
		android:singleLine="true"
    />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_x="15dip"
		android:layout_y="310dip"
		android:textSize="12px"
        android:text="Password: "
    />  
    
    <EditText
        android:id="@+id/pass"
        android:layout_width="215dip"
        android:layout_height="wrap_content"
        android:layout_x="90dip"
		android:layout_y="300dip"
		android:textSize="12px"
		android:singleLine="true"
		android:password="true"
    />
    
    <CheckBox android:id="@+id/checkbox"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_x="90dip"
		android:layout_y="340dip"
		android:textSize="12px"
    	android:text="  remember my account" 
    />
    	
   	<Button
		android:id="@+id/loginButton"
		android:layout_width="290dip"
		android:layout_height="wrap_content"
		android:layout_x="15dip"
		android:layout_y="380dip"
		android:textSize="12px"
		android:text="login"
	/>
</AbsoluteLayout>
